{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2017"
        ],
        "strictNullChecks": true,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "outDir": "./build",
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
